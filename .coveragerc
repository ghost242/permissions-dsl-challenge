[run]
# Coverage configuration
source = src
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */migrations/*
    src/models/resource_policy.py
    src/models/user_policy.py

[report]
# Reporting options
precision = 2
show_missing = True
skip_covered = False

# Exclude patterns
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod

[html]
directory = htmlcov
