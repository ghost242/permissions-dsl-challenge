# Environment Configuration Template
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control

###############################################################################
# Database Configuration
###############################################################################

# Database type: "sqlite" or "postgresql"
DB_TYPE=sqlite

# SQLite Configuration (for local development)
SQLITE_PATH=./data/permissions.db

# PostgreSQL Configuration (for staging/production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DATABASE=permissions

###############################################################################
# Application Configuration
###############################################################################

# Logging level: debug, info, warning, error, critical
LOG_LEVEL=info

# Number of worker processes (for production)
WORKERS=4

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

###############################################################################
# Deployment Configuration (for CI/CD)
###############################################################################

# Docker Registry
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# Staging Environment
STAGING_HOST=your-staging-server.com
STAGING_URL=https://staging.your-domain.com
STAGING_DB_HOST=staging-db.your-domain.com
STAGING_DB_PASSWORD=staging_db_password

# Production Environment
PROD_HOST=your-production-server.com
PROD_URL=https://api.your-domain.com
PROD_DB_HOST=prod-db.your-domain.com
PROD_DB_PASSWORD=prod_db_password

# Notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Code Coverage
CODECOV_TOKEN=your_codecov_token
